<div class="container">

    <div class="d-grid gap-2 mb-3">
      <a href="/job/create" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> New job</a>
    </div>
  
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">schedule</th>
          <th scope="col">actions</th>
        </tr>
      </thead>
      <tbody>
        {{#data}}
        <tr>
          <th scope="row">{{value.name}}</th>    
          <td>{{value.schedule}}</td>
          <td>
            {{^value.actif}}            
              <a title="Start/Stop Job" href="#" onclick="toggleJob('{{key}}',true)"><span class="badge bg-success"><i class="fas fa-play-circle fa-xs fa-fw"></i></span></a>        
            {{/value.actif}}
            {{#value.actif}}
            <a title="Start/Stop Job" href="#" onclick="toggleJob('{{key}}',false)"><span class="badge bg-danger"><i class="fas fa-pause-circle fa-xs fa-fw"></i></span></a>
            {{/value.actif}}
            <a title="Edit Job" href="/job/edit/{{key}}"><span class="badge bg-primary"><i class="fas fa-pen-alt fa-xs fa-fw"></i></span></a>
            <a title="Show log" href="/execution/{{key}}"><span class="badge bg-success"><i class="fas fa-scroll fa-xs fa-fw"></i></span></a>
            <a title="Delete Job" href="#" onclick="deleteJob('{{key}}')"><span class="badge bg-danger"><i class="fas fa-trash fa-xs fa-fw"></i></span></a>
          </td>
        </tr>
        {{/data}}
      </tbody>
    </table>

</div>